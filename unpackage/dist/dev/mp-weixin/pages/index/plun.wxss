.advice .head {
  width: 100%;
  height: 15rpx;
}
.advice .header {
  position: fixed;
  top: 0;
  background-color: white;
  width: 90%;
  height: 80rpx;
  border-bottom: 1rpx solid #e3e3e3;
  left: 5%;
}
.advice .header text {
  display: inline-block;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.advice .header .add {
  display: inline-block;
  width: 170rpx;
  height: 70rpx;
  background-color: #3b75ed;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  float: right;
  border-radius: 18rpx;
  margin-right: 5rpx;
  margin-top: 5rpx;
}
.advice .main {
  width: 96%;
  margin-top: 0 auto;
}
.advice .main .img {
  float: left;
  position: relative;
  top: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 0rpx;
  margin-left: 22rpx;
  margin-right: 20rpx;
}
.advice .main .text {
  float: left;
  width: 590rpx;
  display: inline-block;
}
.advice .main .text .name {
  margin-top: 25rpx;
  display: block;
  color: #5f9bca;
  font-size: 28rpx;
}
.advice .main .text .date {
  display: block;
  font-size: 22rpx;
  margin-top: 12rpx;
}
.advice .main .text .plun {
  display: block;
  margin-top: 12rpx;
  font-size: 31rpx;
}

