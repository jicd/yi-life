.alter .photo {
  width: 92%;
  height: 175rpx;
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.5);
  margin: 0 auto;
  margin-top: 20rpx;
}
.alter .photo text {
  line-height: 160rpx;
  padding-left: 15rpx;
}
.alter .photo .img {
  width: 140rpx;
  height: 140rpx;
  margin-top: 10rpx;
  float: right;
  margin-right: 20rpx;
  border: 1rpx solid #3d3d3d;
  border-radius: 28rpx;
}
.alter .photo .right {
  float: right;
  width: 35rpx;
  height: 35rpx;
  margin-top: 70rpx;
  margin-right: 10rpx;
}
.alter .name, .alter .phone, .alter .city, .alter .like {
  width: 92%;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.5);
}
.alter .name text, .alter .phone text, .alter .city text, .alter .like text {
  line-height: 90rpx;
}
.alter .name .right, .alter .phone .right, .alter .city .right, .alter .like .right {
  font-size: 28rpx;
  float: right;
  margin-right: 20rpx;
  color: #2C405A;
}
.alter .name .left, .alter .phone .left, .alter .city .left, .alter .like .left {
  float: left;
  margin-left: 15rpx;
}
.alter .name image, .alter .phone image, .alter .city image, .alter .like image {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-top: 29rpx;
  margin-right: 10rpx;
}
.alter .back button {
  width: 80%;
  margin-top: 40rpx;
}
.alter .back .blue {
  background-color: #106cff;
}
.alter .back .red {
  background-color: #DD524D;
}

